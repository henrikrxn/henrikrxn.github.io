# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = true
# What about the two spacetrim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js, jsx, ts, tsx, json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
spacetrim_trailing_whitespace = false
indent_size = 4
